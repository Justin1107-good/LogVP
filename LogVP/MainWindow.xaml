<Window
    x:Class="LogVP.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LogVP"
    xmlns:log="clr-namespace:LogVP.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="日志查看器示例"
    Width="1000"
    Height="600"
    Icon="/Properties/log.png"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0">
            <Button
                Name="btnTestLog"
                Click="BtnTestLog_Click"
                Content="测试日志" />
        </ToolBar>

        <log:LogViewerPanel x:Name="logViewer" Grid.Row="1" />
    </Grid>
</Window>
